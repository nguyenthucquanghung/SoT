<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/tv_logout"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:textColor="@drawable/selector_button_login"
        android:layout_gravity="end"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:adjustViewBounds="true"
        android:contentDescription="@string/slogan_image"
        android:src="@drawable/img_sot_slogan" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:background="@color/LightGrey"
        android:paddingVertical="8dp"
        android:text="@string/serum_of_truth_database"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="@dimen/sp_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@color/White"
        >

        <LinearLayout
            android:id="@+id/main_act_container_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <EditText
                android:id="@+id/et_news"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:layout_height="@dimen/dp_40"
                android:layout_marginVertical="@dimen/horizontal_margin"
                android:layout_weight="8"
                android:autofillHints=""
                android:background="@drawable/black_bordered_rectangle"
                android:inputType="text"
                android:paddingHorizontal="@dimen/dp_15"
                android:textSize="@dimen/sp_20"
                android:gravity="center_vertical"
                tools:ignore="LabelFor" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginVertical="18dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/horizontal_margin"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_sot_search"
                android:src="@drawable/ic_button_search" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_act_container_search"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:height="@dimen/dp_40"
            android:background="@drawable/black_bordered_rectangle"
            android:gravity="center"
            android:text="@string/all_languages"
            android:textColor="@drawable/selector_button_lang"
            android:textSize="@dimen/sp_20" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ref"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:layout_below="@id/tv_language"
            android:layout_marginVertical="5dp" />

        <TextView
            android:id="@+id/tv_error"
            android:text="@string/no_related_news_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@id/tv_language"
            android:layout_marginVertical="@dimen/dp_20" />

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_language"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>